{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["prettier-plugin-tailwindcss"],
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["tsdown.config.ts"]
}
